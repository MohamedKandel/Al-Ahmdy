<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardBackgroundColor="#F8F5F2"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp"
    app:contentPaddingBottom="@dimen/_20sdp"
    app:contentPaddingLeft="@dimen/_12sdp"
    app:contentPaddingRight="@dimen/_12sdp"
    app:contentPaddingTop="@dimen/_20sdp"
    app:strokeWidth="0dp"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="1">

        <TextView
            android:id="@+id/txt_rank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_bold"
            android:text="2"
            android:layout_rowWeight="1"
            android:textColor="@color/btm_bar_color"
            android:textSize="@dimen/_12ssp"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:id="@+id/txt_name"
            android:layout_columnWeight="1"
            android:text="@string/app_name"
            android:layout_column="1"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/btm_bar_color"
            android:textSize="@dimen/_11ssp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:text="2000"
            android:textColor="@color/btm_bar_color"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/txt_score"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_column="3"
            android:src="@drawable/empty_star_icon"
            android:id="@+id/star_icon"/>


    </GridLayout>


</com.google.android.material.card.MaterialCardView>