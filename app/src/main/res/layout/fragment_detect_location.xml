<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DetectLocationFragment"
    android:background="@drawable/on_boarding_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/stars"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mosque_on_board"
        android:id="@+id/img_mosque"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_145sdp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layoutDirection="locale"
        android:textDirection="locale">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inria_serif_bold"
            android:text="@string/app_name"
            android:gravity="center"
            android:textSize="@dimen/_21ssp"
            android:textColor="@color/white"
            android:id="@+id/txt_app_name"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_23sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_location"
            android:layout_below="@id/txt_app_name"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/inter_18_medium"
            android:textColor="@color/alpha_white"
            android:id="@+id/txt_request_location"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_23sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_request_location"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_43sdp"
            android:layout_marginEnd="@dimen/_43sdp"
            app:cornerRadius="@dimen/_8sdp"
            android:backgroundTint="@color/green"
            android:layout_marginTop="@dimen/_37sdp"
            android:text="@string/locate_me"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:layout_marginBottom="@dimen/_31sdp"
            android:id="@+id/btn_locate_me"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>